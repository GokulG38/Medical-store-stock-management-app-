doctype html
html
    head
        title Blog
        link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet', href='/css/style.css')
    body.bg-primary.pt-5
        .container.bg-white.rounded.p-5.mt-5
            h1 Log In
            != messages('message', locals)
            
            form(method='POST', action='/user/login')
                #form-group
                    label Username
                    input.form-control(name='username', type='text')
                #form-group
                    label Password
                    input.form-control(name='password', type='password')
                br
                h6 Do not have an account? Please 
                    a(href='/user/signup') Sign up.
                

                br
                input.btn.btn-primary(type='submit', value='Sign In')
        script(src='https://code.jquery.com/jquery-3.5.1.min.js')
        script(src='/bootstrap/js/bootstrap.js')
